<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            padding: 20px;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .post-container {
            background-color: white;
            padding: 15px;
            border-radius: 6px;
            width: 250px;
            box-sizing: border-box;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .post-container h2 {
            font-size: 16px;
            font-weight: normal;
            margin: 5px 0;
        }

        
    </style>
</head>
<body>
    <%- include('header.ejs') %>
    <div class="container">
        <% blog_posts.forEach((element,index) => { %>
            <div class="post-container">
                <h2><%= element.name%></h2>
                <h2><%= element.email%></h2>
                <h2><%= element.date%></h2>
                <h2><%= element.description%></h2>
                <a href="/delete/<%= index %>">Delete</a>
            </div>
       <% }); %>
       
    </div>
</body>
</html>